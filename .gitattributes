# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.markdown text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf

# HTML/CSS/JS
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Media files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.mp4 binary
*.avi binary
*.mov binary
*.mkv binary

# Model files (binary)
*.pt binary
*.pth binary
*.h5 binary
*.keras binary
*.onnx binary
*.pb binary
